#include <stdio.h>
#include <string.h>

void print_map();

char **map;
int xsize, ysize;

main(int argc, char *argv[])
{
  int x, y;
  FILE *datafile;
  char input[4];   /* "nw\n\0" */
  int jxmax, jxmin, jymax, jymin;
  int mark;

  jxmax=jxmin=jymax=jymin=x=y=0;

  if (argc != 2)
    return fprintf(stderr,"Usage: %s <map data file>\n",argv[0]);

  datafile=fopen(argv[1],"r");

  if (!datafile)
    return fprintf(stderr,"Couldn't open map data file: %s.\n",argv[1]);

  while(!feof(datafile))
  {
    fscanf(datafile,"%s",input);
    if (feof(datafile))
      continue;

    if (!strcmp(input,"n"))
      y++;
    else
    if (!strcmp(input,"s"))
      y--;
    else
    if (!strcmp(input,"e"))
      x++;
    else
    if (!strcmp(input,"w"))
      x--;
    else
    if (!strcmp(input,"ne"))
      x++, y++;
    else
    if (!strcmp(input,"nw"))
      x--, y++;
    else
    if (!strcmp(input,"se"))
      x++, y--;
    else
    if (!strcmp(input,"sw"))
      x--, y--;

    if (x < jxmin)  jxmin=x;
    if (x > jxmax)  jxmax=x;
    if (y < jymin)  jymin=y;
    if (y > jymax)  jymax=y;

  }
  fclose(datafile);

  printf("size needed: (X x Y) = (%d x %d)\n",
    2*(jxmax-jxmin)+1, 
    2*(jymax-jymin)+1);

/*
  printf("jxmin == %d, jxmax == %d\njymin == %d, jymax == %d\n",
    jxmin, jxmax, jymin, jymax);
*/

  xsize=2*(jxmax-jxmin)+1;
  ysize=2*(jymax-jymin)+1;

/*  printf("stupid size: (X x Y) = (%d x %d)\n", xsize, ysize); */

  map=(char **)malloc(ysize * sizeof(char *));
  for(y=0; y < ysize; y++)
    map[y]=(char *)malloc(xsize * sizeof(char));

  for(y=0; y<ysize; y++)
    for(x=0; x<xsize; x++)
      map[y][x]=' ';

  /* don't ask me how I came up with these -- 
     trial and error all night long :) 
   */
  x=2*(-jxmin);
  y=2*jymax;

  map[y][x]='C'; 
  
  datafile=fopen(argv[1],"r");
  while(!feof(datafile))
  {
    fscanf(datafile,"%s",input);
    if (feof(datafile))
      continue;

    if (!strcmp(input,"n"))
    {
      y--;
      map[y][x]='|';
      map[--y][x]='o';
    }
    else
    if (!strcmp(input,"s"))
    {
      y++;
      map[y][x]='|';
      map[++y][x]='o';
    }
    else
    if (!strcmp(input,"e"))
    {
      x++;
      map[y][x]='-';
      map[y][++x]='o';
    }
    else
    if (!strcmp(input,"w"))
    {
      x--;
      map[y][x]='-';
      map[y][--x]='o';
    }
    else
    if (!strcmp(input,"ne"))
    {
      x++;
      y--;
      if(map[y][x] != '\\')
        map[y][x]='/';
      else
        map[y][x]='X';

      map[--y][++x]='o';
    }
    else
    if (!strcmp(input,"nw"))
    {
      x--;
      y--;
      if (map[y][x] != '/')
        map[y][x]='\\';
      else
        map[y][x]='X';

      map[--y][--x]='o';
    }
    else
    if (!strcmp(input,"se"))
    {
      x++;
      y++;
      if (map[y][x] != '/')
        map[y][x]='\\';
      else
        map[y][x]='X';

      map[++y][++x]='o';
    }
    else
    if (!strcmp(input,"sw"))
    {
      x--;
      y++;
      if (map[y][x] != '\\')
        map[y][x]='/';
      else
        map[y][x]='X';

      map[++y][--x]='o';
    }
    else
      if (sscanf(input,"%d",&mark)==1)
        map[y][x]=mark+'0';

  }
  fclose(datafile);
  print_map();

  return 1;
}

void print_map()
{
  int x,y;

  puts("---------------------------------------------------------");
  for(y=0;y<ysize;y++)
  {
    for(x=0;x<xsize;x++)
      putchar(map[y][x]);
    putchar('\n');
  }
  puts("---------------------------------------------------------");
}
