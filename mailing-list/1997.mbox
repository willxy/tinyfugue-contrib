;;; /array_get x 2  --echoes--> Yo.
;;; /array_get x 1  --echoes--> Hi there.
;;; /array_set x 1 die die die
;;; /array_get x 1  --echoes--> die die die

/def array_set =\
    /set array_%{1}_%{2}=%{-2}

