/set status_fields @world:12 hp:6:B :2 mana:4:B :2 mv:5:B :1 @more:8:Br \
  :1 @clock:5 
/set status_var_hp pad(hp,-4,"hp",2)
/set status_var_mana pad(mana,-3,"m",1)
/set status_var_mv pad(mv,-3,"mv",2)

