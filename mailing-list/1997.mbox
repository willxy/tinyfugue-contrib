; Use: /inwipe [-m<style>] <pattern>
; 
;      ('/inwipe -mglob /*' and '/inwipe -mregexp ^/' both remove all
;       lines from input history that begin with a '/' character.)

/def inwipe = \
	/if (!getopts("m:")) /break %; /endif %; \
	/set inwipe_pattern=%*%; \
	/set inwipe_histsize=$(/nth 6 $(/histsize -i))%; \
	/set method=$[strlen(opt_m) ? opt_m : matching]%; \
	/quote -dexec /~inwipe `"/recall -i %{inwipe_histsize}"%; \
	/@test $$(/histsize -i 1), $$(/histsize -i %{inwipe_histsize})
	
/def -i ~inwipe = \
	/if (!((({method} =/ 'simple') & ({*} =~ inwipe_pattern)) | \
		(({method} =/ 'glob') & ({*} =/ inwipe_pattern)) | \
		(({method} =/ 'regexp') & \
			(regmatch(inwipe_pattern,{*}))))) \
		/recordline -i %*%; \
	/endif



