/def ShowTitle=\
     /set titel=TinyFugue:_%;\
     /if (afk=1) /eval /set titel=$[strcat(titel,"_AFK_")]%;\
       /Else /eval /set titel=$[strcat(titel,"_____")]%;\
     /Endif%;\
     /if (AutomaticArmor=1) /eval /set titel=$[strcat(titel,"__Armor")]%;\
       /Else /eval /set titel=$[strcat(titel,"_______")]%;\
     /Endif%;\
     /if (AutoLoot=1) /eval /set titel=$[strcat(titel,"_Loot_")]%;\
       /Else /eval /set titel=$[strcat(titel,"______")]%;\
     /Endif%;\
