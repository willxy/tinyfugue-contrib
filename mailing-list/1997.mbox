    /if (!ironMonk)  \
    	cast 'iron monk' %;\
    /endif %;\
    /if (!displacement)  \
    	cast displacement %;\
    /endif %;\
    /if (!shield)  \
    	cast shield %;\
    /endif %;\
    /if (!thoughtShield)  \
    	cast 'thought shield' %;\
    /endif %;\
    /if (!protectionEvil)  \
