;;; replacement for /send which supports /send -T<type>.  It sends to all
;;; connected worlds which match the specifed type, like /def -T<type>.
;;;
;;; $Id: new_send.tf,v 1.3 1997/08/28 23:55:14 dmoore Exp $

;;; #### what if they have a default type or similar?


;;; Usage: /get_world_info cave character --> OliverJones
/def -i get_world_info =\
    /let gwi_name=%;\
    /let gwi_char=%;\
    /let gwi_pass=%;\
    /let gwi_host=%;\
    /let gwi_port=%;\
    /let gwi_file=%;\
    /let gwi_type=%;\
    /let old_matching=%{matching}%;\
    /set matching=simple%;\
    /quote -S /get_world_info_ `/listworlds -c %1%;\
    /set matching=%{old_matching}%;\
    /if ({#} != 2) /echo -e \% get_world_info: Wrong number of arguments.%;\
    /elseif ({2} =~ "name") /echo %{gwi_name}%;\
    /elseif ({2} =~ "char") /echo %{gwi_char}%;\
    /elseif ({2} =~ "character") /echo %{gwi_char}%;\
    /elseif ({2} =~ "pass") /echo %{gwi_pass}%;\
    /elseif ({2} =~ "password") /echo %{gwi_pass}%;\
    /elseif ({2} =~ "host") /echo %{gwi_host}%;\
    /elseif ({2} =~ "port") /echo %{gwi_port}%;\
    /elseif ({2} =~ "file") /echo %{gwi_file}%;\
    /elseif ({2} =~ "type") /echo %{gwi_type}%;\
    /else /echo -e \% get_world_info: Unsupported field: %2%;\
    /endif


/def -i get_world_info_ =\
    /shift%;\
    /let opt_p=%;\
    /let opt_T=%;\
    /if (!getopts("pT:")) /break%;/endif%;\
    /test gwi_type:=opt_T%;\
    /test gwi_name:={1}%;\
    /if ({#} < 5) \
	/test gwi_host:={2}%;\
	/test gwi_port:={3}%;\
    /else \
	/test gwi_char:={2}%;\
	/test gwi_pass:={3}%;\
	/test gwi_host:={4}%;\
	/test gwi_port:={5}%;\
    /endif%;\
    /if ({#} == 4 | {#} == 6) \
	/test gwi_file:={L}%;\
    /endif


;;; Same as tf /send but allows usage of -T<type>
/def -i send =\
    /let opt_n=0%;\
    /let opt_W=0%;\
    /let opt_w=%;\
    /let opt_T=-default-%;\
    /if (!getopts("nWw:T:")) /break%;/endif%;\
    /let text=%*%;\
    /if (opt_W) \
	/quote -S /~send `/listsockets -s%;\
    /elseif (opt_T !~ "-default-") \
	/quote -S /~~send `/listsockets -s%;\
    /else \
	/@test send(text, {opt_w-${world_name}}, !opt_n)%;\
    /endif


/def -i ~send =\
    /@test send(text, {1}, !opt_n)

/def -i ~~send =\
    /let type=$(/get_world_info %1 type)%;\
    /@test ((type =/ opt_T) & send(text, {1}, !opt_n))


