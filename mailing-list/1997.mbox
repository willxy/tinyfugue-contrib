    /def -t"Spell: 'concentrate'*" setConcentrate = /set
concentrate=1%;\
    /def -t"Spell: 'iron skin'*" setIronSkin = /set ironSkin=1%;\
    /def -t"Spell: 'stone skin'*" setStoneSkin = /set stoneSkin=1%;\
    /def -t"Spell: 'armor'*" setArmor = /set armor=1%;\
    /def -t"Spell: 'barkskin'*" setBarkskin = /set barkskin=1%;\
    /def -t"Spell: 'adrenaline control'*" setAdrenalineControl = /set
adrenalineControl=1%;\
    /def -t"Spell: 'holy armor'*" setHolyArmor = /set holyArmor=1%;\
