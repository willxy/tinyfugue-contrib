    /endif %;\
    /if (!adrenalineControl)  \
    	cast 'adrenaline Control' %;\
    /endif %;\
    /if (!holyArmor)  \
    	cast 'holy armor' %;\
    /endif %;\
    /if (!holyAura)  \
