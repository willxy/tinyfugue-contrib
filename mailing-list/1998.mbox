for this.)

/require -q kbstack.tf

;;; Syntax: /load_song <song_file>
;;;
;;; Loads a song into the keyboard stack for access with ESC-UP
;;;
/def load_song = \
  /quote -S /~load_song !cat %1 | perl -e 'print reverse <>'

/def ~load_song = \
  /let _line=%*%;\
  /if ( _line !~ "" ) \
    /set _kb_stack_top=$[_kb_stack_top + 1]%;\
    /set _kb_stack_%{_kb_stack_top}=%{_line}%;\
  /endif


