        /save -a emotes.tf alias_*_%1 %;\
    /endif %;\
    /def emote2_%1 = emote %{-1} %;\
    /save -a emotes.tf emote2_%1 %;\
    /if /not /ismacro emote1_%1 %; /then \
        /def emote1_%1 = /echo -e %%% You need a target for the emote %1 %;\
